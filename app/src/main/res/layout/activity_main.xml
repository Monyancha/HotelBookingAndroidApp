<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl1021.hotelbookingandroidapp.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/plane" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Full Name"
            android:textColor="@color/dim_foreground_disabled_material_light"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:background="@color/material_grey_100"
            android:drawableRight="@drawable/name_icon"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/background_floating_material_dark"
            android:textColorHint="@color/background_floating_material_dark"
            android:textCursorDrawable="@color/colorCursor"
            android:textSize="14sp" />

        <View
            android:id="@+id/tilJA"
            android:layout_width="350dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7sp"
            android:layout_marginTop="3sp"
            android:background="#DCDCDC" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Email"
            android:textColor="@color/dim_foreground_disabled_material_light"
            android:textSize="14sp" />

        <EditText

            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:background="@color/material_grey_100"
            android:drawableRight="@drawable/email_icon"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/background_floating_material_dark"
            android:textColorHint="@color/background_floating_material_dark"
            android:textSize="14sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7sp"
            android:layout_marginTop="3sp"
            android:background="#DCDCDC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:text="Wilayah"
            android:textColor="@color/dim_foreground_disabled_material_light"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerProvinsi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:background="@color/material_grey_100"
            android:entries="@array/provinsi"
            android:foregroundTint="@color/abc_search_url_text"
            android:padding="5dp"
            android:textColor="@color/background_floating_material_dark" />

        <Spinner
            android:id="@+id/spinnerKota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:background="@color/material_grey_100"
            android:textColor="@color/background_floating_material_dark" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Departure / Arrival"
            android:textColor="@color/dim_foreground_disabled_material_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/EditTextDeparture"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:background="@color/material_grey_100"
            android:hint="Select Date..."
            android:padding="10dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textColorHint="@color/abc_input_method_navigation_guard"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/EditTextArrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:background="@color/material_grey_100"
            android:hint="Select Date..."
            android:padding="10dp"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textColorHint="@color/abc_input_method_navigation_guard"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Class"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />


        <RadioGroup
            android:id="@+id/radioGroupStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/radioButtonBM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Economy" />

            <RadioButton
                android:id="@+id/radioButtonM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business" />

            <RadioButton
                android:id="@+id/radioButtonD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Class" />

            <RadioButton
                android:id="@+id/radioButtonJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Executive" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewFasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Facilities"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spa" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Mosque" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@color/colorButton"
            android:text="Search Ticket"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

        <TextView
            android:id="@+id/textViewHasil2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
